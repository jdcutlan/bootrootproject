<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgreen"> <!-- This uses the relative layout -->

    <Button
        android:id="@+id/LTF"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:background="@color/white"
        android:onClick="onButtonClick"
        android:text="League Table, Fixtures and Results" /> <!-- This is the styling of the button -->

    <Button
        android:id="@+id/PS"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="265dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:background="@color/white"
        android:onClick="onButtonClick"
        android:text="Player Statistics" />

    <Button
        android:id="@+id/PAV"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="330dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:background="@color/white"
        android:onClick="onButtonClick"
        android:text="Photos and Videos" />

    <Button
        android:id="@+id/LW"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="395dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:background="@color/white"
        android:onClick="onButtonClick"
        android:text="Live Weather" />

    <Button
        android:id="@+id/PI"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="460dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:background="@color/white"
        android:onClick="onButtonClick"
        android:text="Parking Information" />

    <Button
        android:id="@+id/SACI"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="525dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:background="@color/white"
        android:onClick="onButtonClick"
        android:text="Staff and Contact Info" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:cropToPadding="true"
        app:srcCompat="@drawable/bootrootlogo6" /> <!-- This is the styling of an image -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:text="Cardiff and District Mens Football League"
        android:textSize="18dp"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:textStyle="bold"/> <!-- This is the styling of the text -->

</RelativeLayout>
